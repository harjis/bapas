<h1>Listing accounts</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Iban</th>
    <th colspan="4"></th>
  </tr>
  </thead>

  <tbody>
  <% @accounts.each do |account| %>
      <tr>
        <td><%= account.name %></td>
        <td><%= account.iban %></td>
        <td><%= link_to 'Show', account %></td>
        <td><%= link_to 'Edit', edit_account_path(account) %></td>
        <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Payments', account_payments_path(account_id: account.id) %></td>
        <td><%= link_to 'Upload payments', new_account_payment_path(account_id: account.id) %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Account', new_account_path %>
<%= link_to 'Upload payments', new_payments_path %>
