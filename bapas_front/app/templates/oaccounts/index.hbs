<div class="row">
  <div class="small-12 large-12 columns">
    <hr>
    <dl class="sub-nav">
      <dt>Filter:</dt>
      <dd class="active">{{link-to 'All' 'oaccounts' (query-params filter="")}}</dd>
      <dd>{{link-to 'Categoryless' 'oaccounts' (query-params filter="categoryless")}}</dd>
    </dl>
    <hr>
  </div>
</div>
<div class="row">
  <div class="small-12 large-12 columns text-center">
    <table class="full-width">
      <thead>
      <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      {{#each pagedContent as |oaccount|}}
        {{oaccount-tr oaccount=oaccount selectedCategory=oaccount.category categories=categories}}
      {{else}}
        <tr>
          <td colspan="3">No other accounts found.</td>
        </tr>
      {{/each}}
      </tbody>
    </table>

    {{page-numbers content=pagedContent}}
  </div>
</div>
