<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Category</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  {{#each oaccounts as |oaccount|}}
    <tr>
      <td>
        {{#link-to 'oaccount' oaccount}}
          {{oaccount.name}}
        {{/link-to}}
      </td>
      <td>
        {{view "select"
        content=categories
        optionValuePath="content.id"
        optionLabelPath="content.name"
        selection=oaccount.category}}
      </td>
      <td>
        <button class="button tiny radius" {{action "saveOaccount" oaccount}}>Save</button>
      </td>
    </tr>
  {{else}}
    <tr>
      <td colspan="3">No other accounts found.</td>
    </tr>
  {{/each}}
  </tbody>
</table>
